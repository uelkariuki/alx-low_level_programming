#include "main.h"

/**
  *print_triangle- function that prints a triangle, followed by a new line
  *
  *@size: size of the triangle
  */

void print_triangle(int size)
{
	int i, j;

	if (size <= 0)
	{
		_putchar('\n');

	}
	else
	{
		for (i = 1; i <= size; i++)
		{
			for (j = 1; j <= size- 1; j++)
			{
				_putchar(' ');

			}
			for (j = 1; j <= i; j++)
			{
			_putchar('#');

			}
			_putchar('\n');

		}
		for (i = 1; i <= size + 1; i++) 
		{
			for (j = 1; j <= size + 1 - i; j++)
			{
				_putchar(' ');
			}

			for (j = 1; j <= i; j++)
			{
				_putchar('#');
			}
			if (i < size + 1) 
			{
				_putchar('\n');
			}

		}

}






