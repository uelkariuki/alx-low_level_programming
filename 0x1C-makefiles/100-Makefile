CC = gcc
GCC_COMPILER = $(CC)
SRC = main.c school.c 
OBJ = main.o school.o
NAME = school
RM ?= rm -f
REMOVE = $(RM)
HEADER_FILE = m.h

.PHONY: all $(NAME) -Wall -Werror -Wextra -pedantic  main.o school.o clean oclean fclean re

all: $(HEADER_FILE) -Wall -Werror -Wextra -pedantic $(NAME)


$(NAME): $(OBJ)
	$(GCC_COMPILER) -Wall -Werror -Wextra -pedantic $(OBJ) -o $(NAME)

$(HEADER_FILE):
	echo "Error no $@"
	@exit 1
main.o :main.c 
	$(GCC_COMPILER) -Wall -Werror -Wextra -pedantic main.c -c -o main.o
school.o :school.c
	$(GCC_COMPILER) -Wall -Werror -Wextra -pedantic school.c -c -o school.o

clean:
	$(REMOVE) *~ $(NAME)
oclean:
	$(REMOVE) $(OBJ)
fclean: clean oclean
	
re: fclean all
